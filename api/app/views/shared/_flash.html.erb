<% if flash[:notice] %>
  <div class="fixed top-4 right-4 z-50 max-w-sm animate-fade-in">
    <div class="bg-card text-card-foreground rounded-lg border shadow-lg p-4">
      <div class="flex items-center gap-2">
        <svg class="size-5 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
        <span class="text-sm"><%= flash[:notice] %></span>
      </div>
    </div>
  </div>
<% end %>

<% if flash[:alert] %>
  <div class="fixed top-4 right-4 z-50 max-w-sm animate-fade-in">
    <div class="bg-destructive/15 text-destructive rounded-lg border border-destructive/20 p-4">
      <div class="flex items-center gap-2">
        <svg class="size-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
        </svg>
        <span class="text-sm"><%= flash[:alert] %></span>
      </div>
    </div>
  </div>
<% end %>
