<% content_for :title, "Sign In | OpenDXI" %>

<div class="min-h-screen flex items-center justify-center">
  <%# Login Card - matches shadcn Card styling %>
  <div class="bg-card text-card-foreground rounded-xl border shadow-sm max-w-md w-full mx-4">
    <div class="p-6 space-y-6">
      <%# Header %>
      <div class="text-center space-y-2">
        <h1 class="text-2xl font-semibold tracking-tight">OpenDXI Dashboard</h1>
        <p class="text-sm text-muted-foreground">Sign in to view your team's metrics</p>
      </div>

      <%# Alert %>
      <% if flash[:alert] %>
        <div class="bg-destructive/15 text-destructive border border-destructive/20 rounded-lg p-4 text-sm">
          <div class="flex items-center gap-2">
            <svg class="size-4 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
            <%= flash[:alert] %>
          </div>
        </div>
      <% end %>

      <%# Notice %>
      <% if flash[:notice] %>
        <div class="bg-green-500/15 text-green-700 dark:text-green-400 border border-green-500/20 rounded-lg p-4 text-sm">
          <div class="flex items-center gap-2">
            <svg class="size-4 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <%= flash[:notice] %>
          </div>
        </div>
      <% end %>

      <%# GitHub Sign In Button - matches shadcn Button %>
      <%= link_to "/auth/github",
          class: "inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium
                  h-10 px-4 py-2 w-full
                  bg-primary text-primary-foreground hover:bg-primary/90
                  transition-colors focus-visible:ring-ring/50 focus-visible:ring-[3px] outline-none",
          data: { turbo: false } do %>
        <svg class="size-5" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
        Sign in with GitHub
      <% end %>
    </div>
  </div>
</div>
