<% content_for :title, "Login - OpenDXI Dashboard" %>

<main class="min-h-screen flex items-center justify-center px-4">
  <div class="w-full max-w-sm">
    <div class="card p-8 text-center">
      <%# Logo / Title %>
      <div class="mb-6">
        <div class="w-16 h-16 mx-auto mb-4 rounded-xl bg-primary flex items-center justify-center">
          <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary-foreground">
            <path d="M12 20h9"/>
            <path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z"/>
          </svg>
        </div>
        <h1 class="text-2xl font-bold">OpenDXI Dashboard</h1>
        <p class="text-muted-foreground text-sm mt-1">Developer Experience Index</p>
      </div>

      <%# Error message %>
      <% if params[:error] %>
        <div class="mb-4 p-3 rounded-lg bg-destructive/10 text-destructive text-sm">
          <% case params[:error] %>
          <% when "not_authorized" %>
            You are not authorized to access this dashboard.
          <% when "access_denied" %>
            Access denied. Please try again.
          <% else %>
            Authentication failed. Please try again.
          <% end %>
        </div>
      <% end %>

      <%# Login button %>
      <%= button_to "/auth/github", method: :post, class: "btn btn-primary w-full", data: { turbo: false } do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
        Sign in with GitHub
      <% end %>

      <p class="mt-4 text-xs text-muted-foreground">
        Sign in with your GitHub account to access the dashboard.
      </p>
    </div>

    <%# Footer %>
    <p class="text-center text-xs text-muted-foreground mt-6">
      Powered by
      <a href="https://github.com/esoxjem/OpenDXI" target="_blank" rel="noopener" class="underline hover:text-foreground">
        OpenDXI
      </a>
    </p>
  </div>
</main>
