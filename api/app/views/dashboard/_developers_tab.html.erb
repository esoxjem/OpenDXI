<%# Developers Tab with Leaderboard %>
<div class="space-y-6">
  <%# Leaderboard Table %>
  <turbo-frame id="leaderboard">
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Rank
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= sort_link "Developer", "developer", sort_by, sort_dir, sprint %>
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= sort_link "DXI Score", "dxi_score", sort_by, sort_dir, sprint %>
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= sort_link "Commits", "commits", sort_by, sort_dir, sprint %>
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= sort_link "PRs", "prs_opened", sort_by, sort_dir, sprint %>
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= sort_link "Reviews", "reviews_given", sort_by, sort_dir, sprint %>
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Cycle Time
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% sorted_developers(sprint, sort_by, sort_dir).each_with_index do |dev, index| %>
            <tr class="hover:bg-gray-50 cursor-pointer"
                onclick="Turbo.visit('<%= developer_path(dev['developer'], sprint: sprint.date_range_param) %>')">
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= index + 1 %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center">
                  <img class="h-8 w-8 rounded-full"
                       src="https://github.com/<%= dev['developer'] %>.png?size=32"
                       alt="<%= dev['developer'] %>"
                       loading="lazy">
                  <div class="ml-3">
                    <div class="text-sm font-medium text-gray-900">
                      <%= dev['developer'] %>
                    </div>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-sm font-medium <%= dxi_score_bg_class(dev['dxi_score']) %> <%= dxi_score_class(dev['dxi_score']) %>">
                  <%= dev['dxi_score']&.round(1) || "â€”" %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= dev['commits'] %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= dev['prs_opened'] %>
                <span class="text-gray-500">(<%= dev['prs_merged'] %> merged)</span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= dev['reviews_given'] %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= format_hours(dev['avg_cycle_time_hours']) %>
              </td>
            </tr>
          <% end %>

          <% if sprint.developers.empty? %>
            <tr>
              <td colspan="7" class="px-6 py-12 text-center text-gray-500">
                <p class="text-lg font-medium">No data available</p>
                <p class="text-sm mt-1">Click "Refresh Data" to fetch metrics from GitHub</p>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </turbo-frame>
</div>
