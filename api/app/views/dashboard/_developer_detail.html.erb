<%# locals: (developer:, team_scores:) %>
<div class="space-y-6">
  <%# Back link %>
  <%= link_to "â† Back to all developers",
      dashboard_path(sprint: @selected_sprint, view: "developers"),
      class: "text-sm text-muted-foreground hover:text-foreground",
      data: { turbo_frame: "tab-content" } %>

  <%# Header %>
  <div class="card p-6">
    <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-4">
      <div class="flex items-center gap-4">
        <div class="w-16 h-16 rounded-full bg-muted flex items-center justify-center text-2xl font-bold">
          <%= developer[:developer]&.first&.upcase || "?" %>
        </div>
        <div>
          <h2 class="text-xl font-bold"><%= developer[:developer] %></h2>
          <p class="text-muted-foreground"><%= score_label(developer[:dxi_score]) %></p>
        </div>
      </div>
      <div class="text-right">
        <div class="text-3xl font-bold <%= score_text_class(developer[:dxi_score]) %>">
          <%= developer[:dxi_score]&.round || "--" %>
        </div>
        <div class="text-sm text-muted-foreground">DXI Score</div>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <%# Stats %>
    <div class="card p-6">
      <h3 class="font-semibold mb-4">Sprint Statistics</h3>
      <div class="grid grid-cols-2 gap-4">
        <div class="p-3 bg-muted rounded-lg">
          <div class="text-2xl font-bold"><%= format_number(developer[:commits]) %></div>
          <div class="text-sm text-muted-foreground">Commits</div>
        </div>
        <div class="p-3 bg-muted rounded-lg">
          <div class="text-2xl font-bold"><%= format_number(developer[:prs_merged]) %></div>
          <div class="text-sm text-muted-foreground">PRs Merged</div>
        </div>
        <div class="p-3 bg-muted rounded-lg">
          <div class="text-2xl font-bold"><%= format_number(developer[:reviews_given]) %></div>
          <div class="text-sm text-muted-foreground">Reviews Given</div>
        </div>
        <div class="p-3 bg-muted rounded-lg">
          <div class="text-2xl font-bold"><%= format_hours(developer[:avg_cycle_time_hours]) %></div>
          <div class="text-sm text-muted-foreground">Avg Cycle Time</div>
        </div>
      </div>

      <div class="mt-4 pt-4 border-t">
        <div class="flex justify-between text-sm">
          <span class="text-muted-foreground">Lines Added</span>
          <span class="font-mono text-success">+<%= format_number(developer[:lines_added]) %></span>
        </div>
        <div class="flex justify-between text-sm mt-1">
          <span class="text-muted-foreground">Lines Deleted</span>
          <span class="font-mono text-destructive">-<%= format_number(developer[:lines_deleted]) %></span>
        </div>
      </div>
    </div>

    <%# Comparison Radar Chart %>
    <%= render "radar_chart",
        scores: team_scores,
        developer_scores: developer[:dimension_scores],
        title: "Developer vs Team" %>
  </div>

  <%# Dimension Details %>
  <div class="card p-6">
    <h3 class="font-semibold mb-4">DXI Dimension Breakdown</h3>
    <div class="space-y-4">
      <% %w[review_speed cycle_time pr_size review_coverage commit_frequency].each do |dim| %>
        <% dev_score = developer[:dimension_scores]&.dig(dim.to_sym) || developer[:dimension_scores]&.dig(dim) %>
        <% team_score = team_scores&.dig(dim.to_sym) || team_scores&.dig(dim) %>
        <div>
          <div class="flex items-center justify-between mb-1">
            <span class="font-medium"><%= dimension_label(dim) %></span>
            <div class="flex items-center gap-3">
              <span class="text-sm text-muted-foreground">Team: <%= team_score&.round || "--" %></span>
              <span class="font-bold <%= score_text_class(dev_score) %>"><%= dev_score&.round || "--" %></span>
            </div>
          </div>
          <div class="flex items-center gap-2">
            <div class="flex-1 h-2 bg-muted rounded-full overflow-hidden">
              <div class="h-full <%= dimension_bar_class(dev_score) %> rounded-full transition-all duration-300"
                   style="width: <%= dimension_bar_width(dev_score) %>%"></div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
