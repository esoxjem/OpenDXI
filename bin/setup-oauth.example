#!/usr/bin/env bash
#
# Setup GitHub OAuth App for OpenDXI
#
# This script helps you create a GitHub OAuth App and configure
# the environment variables needed for authentication.
#
# SETUP:
#   1. Copy this file: cp bin/setup-oauth.example bin/setup-oauth
#   2. Edit the PRODUCTION URLs below to match your deployment
#   3. Make executable: chmod +x bin/setup-oauth
#   4. Run: bin/setup-oauth (local) or bin/setup-oauth --production
#
# Usage:
#   bin/setup-oauth                    # Local development (default)
#   bin/setup-oauth --production       # Production deployment
#   bin/setup-oauth --org GITHUB_ORG   # Specify organization
#
# Options:
#   --production     Use production URLs (configure below)
#   --org ORG        GitHub organization name
#   --frontend-url   Custom frontend URL
#   --api-url        Custom API URL
#   --coolify-only   Only show env vars (no file updates)

set -e

# =============================================================================
# CONFIGURE YOUR PRODUCTION URLS HERE
# =============================================================================
PROD_FRONTEND_URL="https://your-frontend-domain.com"
PROD_API_URL="https://your-api-domain.com"
# =============================================================================

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
CYAN='\033[0;36m'
NC='\033[0m' # No Color

# Default values (local development)
GITHUB_ORG=""
FRONTEND_URL="http://localhost:3001"
API_URL="http://localhost:3000"
PRODUCTION_MODE=false
COOLIFY_ONLY=false

# Parse arguments
while [[ $# -gt 0 ]]; do
  case $1 in
    --org)
      GITHUB_ORG="$2"
      shift 2
      ;;
    --frontend-url)
      FRONTEND_URL="$2"
      shift 2
      ;;
    --api-url)
      API_URL="$2"
      shift 2
      ;;
    --production)
      PRODUCTION_MODE=true
      FRONTEND_URL="$PROD_FRONTEND_URL"
      API_URL="$PROD_API_URL"
      shift
      ;;
    --coolify-only)
      COOLIFY_ONLY=true
      PRODUCTION_MODE=true
      FRONTEND_URL="$PROD_FRONTEND_URL"
      API_URL="$PROD_API_URL"
      shift
      ;;
    --help|-h)
      echo "Usage: bin/setup-oauth [OPTIONS]"
      echo ""
      echo "Options:"
      echo "  --production     Use production URLs (configure in script)"
      echo "  --org ORG        GitHub organization name"
      echo "  --frontend-url   Custom frontend URL"
      echo "  --api-url        Custom API URL"
      echo "  --coolify-only   Only show env vars (no file updates)"
      echo "  --help           Show this help message"
      exit 0
      ;;
    *)
      echo "Unknown option: $1"
      echo "Run 'bin/setup-oauth --help' for usage"
      exit 1
      ;;
  esac
done

echo -e "${BLUE}╔════════════════════════════════════════════════════════════╗${NC}"
echo -e "${BLUE}║        OpenDXI GitHub OAuth App Setup                      ║${NC}"
echo -e "${BLUE}╚════════════════════════════════════════════════════════════╝${NC}"
echo ""

if [ "$PRODUCTION_MODE" = true ]; then
  echo -e "${CYAN}Mode: PRODUCTION${NC}"
  echo -e "  Frontend: ${FRONTEND_URL}"
  echo -e "  API:      ${API_URL}"
  echo ""
else
  echo -e "${CYAN}Mode: LOCAL DEVELOPMENT${NC}"
  echo -e "  Frontend: ${FRONTEND_URL}"
  echo -e "  API:      ${API_URL}"
  echo ""
  echo -e "  ${YELLOW}Tip:${NC} Use ${BLUE}--production${NC} flag for production deployment"
  echo ""
fi

# Try to detect GitHub org from existing .env
if [ -z "$GITHUB_ORG" ] && [ -f "api/.env" ]; then
  GITHUB_ORG=$(grep -E "^GITHUB_ORG=" api/.env | cut -d= -f2)
fi

# Prompt for GitHub org if not set
if [ -z "$GITHUB_ORG" ]; then
  echo -e "${YELLOW}Enter your GitHub organization name:${NC}"
  read -r GITHUB_ORG
fi

if [ -z "$GITHUB_ORG" ]; then
  echo -e "${RED}Error: GitHub organization is required${NC}"
  exit 1
fi

# Calculate callback URL
CALLBACK_URL="${API_URL}/auth/github/callback"

echo ""
echo -e "${GREEN}Step 1: Create GitHub OAuth App${NC}"
echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
echo ""
echo "I'll open the GitHub OAuth App creation page for you."
echo "Please fill in these values:"
echo ""
echo -e "  ${YELLOW}Application name:${NC}     OpenDXI Dashboard"
echo -e "  ${YELLOW}Homepage URL:${NC}         ${FRONTEND_URL}"
echo -e "  ${YELLOW}Authorization callback:${NC} ${CALLBACK_URL}"
echo ""
echo -e "Press ${BLUE}Enter${NC} to open GitHub in your browser..."
read -r

# Determine the URL based on whether it's an org or user app
OAUTH_CREATE_URL="https://github.com/organizations/${GITHUB_ORG}/settings/applications/new"

# Open the browser
if command -v open &> /dev/null; then
  open "$OAUTH_CREATE_URL"
elif command -v xdg-open &> /dev/null; then
  xdg-open "$OAUTH_CREATE_URL"
else
  echo -e "${YELLOW}Please open this URL in your browser:${NC}"
  echo "$OAUTH_CREATE_URL"
fi

echo ""
echo -e "${GREEN}Step 2: Enter OAuth Credentials${NC}"
echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
echo ""
echo "After creating the OAuth App, copy the Client ID and generate a Client Secret."
echo ""

echo -e "${YELLOW}Enter the Client ID:${NC}"
read -r CLIENT_ID

echo -e "${YELLOW}Enter the Client Secret:${NC}"
read -rs CLIENT_SECRET
echo ""

if [ -z "$CLIENT_ID" ] || [ -z "$CLIENT_SECRET" ]; then
  echo -e "${RED}Error: Both Client ID and Client Secret are required${NC}"
  exit 1
fi

echo ""
echo -e "${GREEN}Step 3: Configure Bootstrap Owner${NC}"
echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
echo ""
echo "Enter the GitHub username that should be the first owner."
echo "This user can then add other users via the Settings UI."
echo ""
echo -e "${YELLOW}Enter owner GitHub username:${NC}"
read -r OWNER_USERNAME

echo ""
echo -e "${GREEN}Step 4: Update Environment Files${NC}"
echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
echo ""

# Function to update or add env var
update_env() {
  local file="$1"
  local key="$2"
  local value="$3"

  if grep -q "^${key}=" "$file" 2>/dev/null; then
    # Update existing value
    sed -i.bak "s|^${key}=.*|${key}=${value}|" "$file"
    rm -f "${file}.bak"
  else
    # Add new value
    echo "${key}=${value}" >> "$file"
  fi
}

if [ "$COOLIFY_ONLY" = true ]; then
  echo -e "${YELLOW}Skipping local file updates (--coolify-only mode)${NC}"
else
  # Create or update api/.env
  ENV_FILE="api/.env"
  if [ ! -f "$ENV_FILE" ]; then
    if [ -f "api/.env.example" ]; then
      cp "api/.env.example" "$ENV_FILE"
      echo -e "Created ${ENV_FILE} from .env.example"
    else
      touch "$ENV_FILE"
      echo -e "Created new ${ENV_FILE}"
    fi
  fi

  # Update API environment
  update_env "$ENV_FILE" "GITHUB_ORG" "$GITHUB_ORG"
  update_env "$ENV_FILE" "GITHUB_OAUTH_CLIENT_ID" "$CLIENT_ID"
  update_env "$ENV_FILE" "GITHUB_OAUTH_CLIENT_SECRET" "$CLIENT_SECRET"
  update_env "$ENV_FILE" "GITHUB_OAUTH_CALLBACK_URL" "$CALLBACK_URL"
  update_env "$ENV_FILE" "OWNER_GITHUB_USERNAME" "$OWNER_USERNAME"
  update_env "$ENV_FILE" "FRONTEND_URL" "$FRONTEND_URL"
  update_env "$ENV_FILE" "CORS_ORIGINS" "$FRONTEND_URL"

  echo -e "${GREEN}✓${NC} Updated ${ENV_FILE}"

  # Update frontend environment if needed
  FRONTEND_ENV="frontend/.env.local"
  if [ ! -f "$FRONTEND_ENV" ]; then
    echo "NEXT_PUBLIC_API_URL=${API_URL}" > "$FRONTEND_ENV"
    echo -e "${GREEN}✓${NC} Created ${FRONTEND_ENV}"
  else
    update_env "$FRONTEND_ENV" "NEXT_PUBLIC_API_URL" "$API_URL"
    echo -e "${GREEN}✓${NC} Updated ${FRONTEND_ENV}"
  fi
fi

echo ""
echo -e "${GREEN}╔════════════════════════════════════════════════════════════╗${NC}"
echo -e "${GREEN}║                    Setup Complete!                         ║${NC}"
echo -e "${GREEN}╚════════════════════════════════════════════════════════════╝${NC}"
echo ""

if [ "$PRODUCTION_MODE" = true ]; then
  echo -e "${CYAN}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
  echo -e "${CYAN}  COOLIFY ENVIRONMENT VARIABLES (copy to Coolify UI)        ${NC}"
  echo -e "${CYAN}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
  echo ""
  echo -e "${YELLOW}Rails API Resource → Environment Variables:${NC}"
  echo ""
  echo "GITHUB_ORG=${GITHUB_ORG}"
  echo "GITHUB_OAUTH_CLIENT_ID=${CLIENT_ID}"
  echo "GITHUB_OAUTH_CLIENT_SECRET=${CLIENT_SECRET}"
  echo "GITHUB_OAUTH_CALLBACK_URL=${CALLBACK_URL}"
  echo "FRONTEND_URL=${FRONTEND_URL}"
  echo "CORS_ORIGINS=${FRONTEND_URL}"
  if [ -n "$OWNER_USERNAME" ]; then
    echo "OWNER_GITHUB_USERNAME=${OWNER_USERNAME}"
  fi
  echo ""
  echo -e "${YELLOW}Also required (not set by this script):${NC}"
  echo "RAILS_MASTER_KEY=<from api/config/master.key>"
  echo "GH_TOKEN=<github-personal-access-token>"
  echo ""
  echo -e "${YELLOW}Next.js Frontend Resource → Build Arguments:${NC}"
  echo ""
  echo "NEXT_PUBLIC_API_URL=${API_URL}"
  echo ""
  echo -e "${CYAN}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
  echo ""
  echo -e "${GREEN}Next steps:${NC}"
  echo "  1. Copy the environment variables above to Coolify"
  echo "  2. Deploy the Rails API first"
  echo "  3. Deploy the Next.js frontend second"
  echo "  4. Test login at ${FRONTEND_URL}"
  echo ""
else
  echo "OAuth authentication is now configured. To start the application:"
  echo ""
  echo -e "  ${BLUE}bin/dev${NC}"
  echo ""
  echo "Then visit ${FRONTEND_URL} and click 'Sign in with GitHub'."
  echo ""

  if [ -n "$OWNER_USERNAME" ]; then
    echo -e "${YELLOW}Note:${NC} The first owner will be: ${OWNER_USERNAME}"
    echo "  After logging in, use Settings to add other users."
    echo ""
  fi

  echo -e "${YELLOW}For production deployment:${NC}"
  echo -e "  Run: ${BLUE}bin/setup-oauth --production${NC}"
  echo ""
fi
