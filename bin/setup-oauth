#!/usr/bin/env bash
#
# Setup GitHub OAuth App for OpenDXI
#
# This script helps you create a GitHub OAuth App and configure
# the environment variables needed for authentication.
#
# Usage: bin/setup-oauth [--org GITHUB_ORG]

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Default values
GITHUB_ORG=""
FRONTEND_URL="http://localhost:3001"
API_URL="http://localhost:3000"

# Parse arguments
while [[ $# -gt 0 ]]; do
  case $1 in
    --org)
      GITHUB_ORG="$2"
      shift 2
      ;;
    --frontend-url)
      FRONTEND_URL="$2"
      shift 2
      ;;
    --api-url)
      API_URL="$2"
      shift 2
      ;;
    *)
      echo "Unknown option: $1"
      exit 1
      ;;
  esac
done

echo -e "${BLUE}╔════════════════════════════════════════════════════════════╗${NC}"
echo -e "${BLUE}║        OpenDXI GitHub OAuth App Setup                      ║${NC}"
echo -e "${BLUE}╚════════════════════════════════════════════════════════════╝${NC}"
echo ""

# Try to detect GitHub org from existing .env
if [ -z "$GITHUB_ORG" ] && [ -f "api/.env" ]; then
  GITHUB_ORG=$(grep -E "^GITHUB_ORG=" api/.env | cut -d= -f2)
fi

# Prompt for GitHub org if not set
if [ -z "$GITHUB_ORG" ]; then
  echo -e "${YELLOW}Enter your GitHub organization name:${NC}"
  read -r GITHUB_ORG
fi

if [ -z "$GITHUB_ORG" ]; then
  echo -e "${RED}Error: GitHub organization is required${NC}"
  exit 1
fi

# Calculate callback URL
CALLBACK_URL="${API_URL}/auth/github/callback"

echo ""
echo -e "${GREEN}Step 1: Create GitHub OAuth App${NC}"
echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
echo ""
echo "I'll open the GitHub OAuth App creation page for you."
echo "Please fill in these values:"
echo ""
echo -e "  ${YELLOW}Application name:${NC}     OpenDXI Dashboard"
echo -e "  ${YELLOW}Homepage URL:${NC}         ${FRONTEND_URL}"
echo -e "  ${YELLOW}Authorization callback:${NC} ${CALLBACK_URL}"
echo ""
echo -e "Press ${BLUE}Enter${NC} to open GitHub in your browser..."
read -r

# Determine the URL based on whether it's an org or user app
OAUTH_CREATE_URL="https://github.com/organizations/${GITHUB_ORG}/settings/applications/new"

# Open the browser
if command -v open &> /dev/null; then
  open "$OAUTH_CREATE_URL"
elif command -v xdg-open &> /dev/null; then
  xdg-open "$OAUTH_CREATE_URL"
else
  echo -e "${YELLOW}Please open this URL in your browser:${NC}"
  echo "$OAUTH_CREATE_URL"
fi

echo ""
echo -e "${GREEN}Step 2: Enter OAuth Credentials${NC}"
echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
echo ""
echo "After creating the OAuth App, copy the Client ID and generate a Client Secret."
echo ""

echo -e "${YELLOW}Enter the Client ID:${NC}"
read -r CLIENT_ID

echo -e "${YELLOW}Enter the Client Secret:${NC}"
read -rs CLIENT_SECRET
echo ""

if [ -z "$CLIENT_ID" ] || [ -z "$CLIENT_SECRET" ]; then
  echo -e "${RED}Error: Both Client ID and Client Secret are required${NC}"
  exit 1
fi

echo ""
echo -e "${GREEN}Step 3: Configure Allowed Users (Optional)${NC}"
echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
echo ""
echo "You can restrict access to specific GitHub usernames."
echo "Leave empty to allow all authenticated GitHub users."
echo ""
echo -e "${YELLOW}Enter allowed usernames (comma-separated, or leave empty):${NC}"
read -r ALLOWED_USERS

echo ""
echo -e "${GREEN}Step 4: Update Environment Files${NC}"
echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
echo ""

# Create or update api/.env
ENV_FILE="api/.env"
if [ ! -f "$ENV_FILE" ]; then
  if [ -f "api/.env.example" ]; then
    cp "api/.env.example" "$ENV_FILE"
    echo -e "Created ${ENV_FILE} from .env.example"
  else
    touch "$ENV_FILE"
    echo -e "Created new ${ENV_FILE}"
  fi
fi

# Function to update or add env var
update_env() {
  local file="$1"
  local key="$2"
  local value="$3"

  if grep -q "^${key}=" "$file" 2>/dev/null; then
    # Update existing value
    sed -i.bak "s|^${key}=.*|${key}=${value}|" "$file"
    rm -f "${file}.bak"
  else
    # Add new value
    echo "${key}=${value}" >> "$file"
  fi
}

# Update API environment
update_env "$ENV_FILE" "GITHUB_ORG" "$GITHUB_ORG"
update_env "$ENV_FILE" "GITHUB_OAUTH_CLIENT_ID" "$CLIENT_ID"
update_env "$ENV_FILE" "GITHUB_OAUTH_CLIENT_SECRET" "$CLIENT_SECRET"
update_env "$ENV_FILE" "GITHUB_OAUTH_CALLBACK_URL" "$CALLBACK_URL"
update_env "$ENV_FILE" "GITHUB_ALLOWED_USERS" "$ALLOWED_USERS"
update_env "$ENV_FILE" "FRONTEND_URL" "$FRONTEND_URL"
update_env "$ENV_FILE" "CORS_ORIGINS" "$FRONTEND_URL"

echo -e "${GREEN}✓${NC} Updated ${ENV_FILE}"

# Update frontend environment if needed
FRONTEND_ENV="frontend/.env.local"
if [ ! -f "$FRONTEND_ENV" ]; then
  echo "NEXT_PUBLIC_API_URL=${API_URL}" > "$FRONTEND_ENV"
  echo -e "${GREEN}✓${NC} Created ${FRONTEND_ENV}"
else
  update_env "$FRONTEND_ENV" "NEXT_PUBLIC_API_URL" "$API_URL"
  echo -e "${GREEN}✓${NC} Updated ${FRONTEND_ENV}"
fi

echo ""
echo -e "${GREEN}╔════════════════════════════════════════════════════════════╗${NC}"
echo -e "${GREEN}║                    Setup Complete!                         ║${NC}"
echo -e "${GREEN}╚════════════════════════════════════════════════════════════╝${NC}"
echo ""
echo "OAuth authentication is now configured. To start the application:"
echo ""
echo -e "  ${BLUE}bin/dev${NC}"
echo ""
echo "Then visit ${FRONTEND_URL} and click 'Sign in with GitHub'."
echo ""

if [ -n "$ALLOWED_USERS" ]; then
  echo -e "${YELLOW}Note:${NC} Only these users can access the dashboard:"
  echo "  $ALLOWED_USERS"
  echo ""
fi

echo "For production deployment, update the URLs in your Coolify environment:"
echo "  GITHUB_OAUTH_CALLBACK_URL=https://your-api-domain/auth/github/callback"
echo "  FRONTEND_URL=https://your-frontend-domain"
echo "  CORS_ORIGINS=https://your-frontend-domain"
echo ""
